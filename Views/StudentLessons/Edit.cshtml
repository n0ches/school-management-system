@model SchoolSystemManagement.Models.StudentLesson

@{
    ViewData["Title"] = "Edit";
}

<h4>StudentLesson</h4>
<hr />
<div class="row">
    <span class="col-sm-2 font-weight-bold">Leson</span>
    <span class="col-sm-10">@Model.Lesson.Name</span>

    <span class="col-sm-2 font-weight-bold">NAME</span>
    <span class="col-sm-10">@Model.Student.Name @Model.Student.Surname</span>

    <span class="col-sm-2 font-weight-bold">NUMBER:</span>
    <span class="col-sm-10">@Model.Student.SchoolNumber</span>

    <span class="col-sm-2 font-weight-bold">E-MAIL:</span>
    <span class="col-sm-10">@Model.Student.Email</span>

    <span class="col-sm-2 font-weight-bold">CLASS:</span>
    <span class="col-sm-10">@Model.Student.Class</span>

</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                    <option value="@Grade.AA">@Grade.AA</option>
                    <option value="@Grade.BA">@Grade.BA</option>
                    <option value="@Grade.BB">@Grade.BB</option>
                    <option value="@Grade.CB">@Grade.CB</option>
                    <option value="@Grade.CC">@Grade.CC</option>
                    <option value="@Grade.DC">@Grade.DC</option>
                    <option value="@Grade.DD">@Grade.DD</option>
                    <option value="@Grade.FD">@Grade.FD</option>
                    <option value="@Grade.FF">@Grade.FF</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
