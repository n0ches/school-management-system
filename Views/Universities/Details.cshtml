@model dynamic

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>University</h4>
    <hr />
    <div class="row">
        <span class="col-sm-2 font-weight-bold">NAME</span>
        <span class="col-sm-10">@Model.University.Name</span>

        <span class="col-sm-2 font-weight-bold">City</span>
        <span class="col-sm-10">@Model.University.City</span>

        <span class="col-sm-2 font-weight-bold">Country</span>
        <span class="col-sm-10">@Model.University.Country</span>

    </div>
    <div class="row mt-5">
        <h4>Faculties</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Faculty f in Model.Faculties)
                {
                <tr>

                    <td scope="row">@f.Name</td>
                    <td>
                        <a asp-controller="Faculties" asp-action="Details" asp-route-id="@f.ID">Detail</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.University.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
